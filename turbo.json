{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "backend#dev": {
      "dependsOn": ["@my-kitty/zod#build"]
    },
    "migrate": {
      "cache": false
    },
    "lint": {},
    "lint-fix": {},
    "clean": {
      "cache": false
    }
  }
}
