{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint-fix": {},
    "lint-staged": {},
    "postinstall": {},
    "pre-commit": {},
    "clean": {
      "cache": false
    }
  }
}
